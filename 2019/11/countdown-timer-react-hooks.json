            "node": [
                {
                    "@_TEXT": "Summary",
                    "@_POSITION": "right",
                    "@_ID": "ID_1226961462",
                    "@_CREATED": 1570979963389,
                    "@_MODIFIED": 1570980209554,
                    "@_COLOR": "#3333ff",
                    "icon": {
                        "@_BUILTIN": "wizard"
